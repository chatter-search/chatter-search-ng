{
  "name": "chatter-search-ng",
  "version": "1.0.0",
  "description": "Chatter search web client written with Angular",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile-styles": "./tasks/compile-styles.sh",
    "watch-styles": "sane 'npm run compile-styles' ./src/styles --glob='**/*.scss'",
    "compile-components": "./tasks/compile-components.sh",
    "compile-scripts": "./tasks/compile-scripts.sh",
    "watch-scripts": "sane 'npm run compile-scripts' ./src/scripts --glob=**/*.js",
    "compile-templates": "./tasks/compile-templates.sh",
    "watch-templates": "sane 'npm run compile-templates' ./src --glob=**/*.html",
    "build": "./tasks/build.sh",
    "surge": "surge ./build chatter-search.surge.sh",
    "deploy": "npm run build && npm run surge"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "6.3.6",
    "node-sass": "3.4.2",
    "postcss-cli": "2.5.1",
    "sane": "1.3.4"
  }
}
